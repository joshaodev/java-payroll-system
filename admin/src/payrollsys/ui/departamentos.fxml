                              <TableColumn fx:id="colNome" maxWidth="8000.0" prefWidth="75.0" text="Nome do Departamento" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
